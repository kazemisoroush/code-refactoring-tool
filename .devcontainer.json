{
  "name": "Go Refactoring Tool Dev",
  "image": "mcr.microsoft.com/devcontainers/go:dev-1.24",
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers-extra/features/aws-cdk:2.0.16": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "remoteEnv": {
    "CLAUDE_CODE_USE_BEDROCK": "1"
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ],
  "onCreateCommand": "sudo usermod -aG docker ${USER}",
  "postCreateCommand": "go install github.com/golang/mock/mockgen@v1.6.0 && go mod tidy && git config --global credential.helper store",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.vscode-pull-request-github",
        "GitHub.copilot"
      ]
    }
  }
}
